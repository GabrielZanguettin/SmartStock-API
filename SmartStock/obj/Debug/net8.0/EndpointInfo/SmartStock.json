            },
            "nullable": true
          },
          "subtotal": {
            "type": "number",
            "format": "double",
            "readOnly": true
          },
          "taxes": {
            "type": "number",
            "format": "double"
          },
          "discount": {
            "type": "number",
            "format": "double"
          },
          "total": {
