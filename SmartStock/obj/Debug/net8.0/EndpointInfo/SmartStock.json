  "components": {
    "schemas": {
      "CreateProductDto": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "description": "Name of the product.",
            "example": "Tênis esportivo básico"
          },
          "unitPrice": {
            "maximum": 1.7976931348623157E+308,
            "minimum": 0.01,
            "type": "number",
            "description": "Unit price of the product.",
            "format": "double",
            "example": 199,90
          },
          "stockQuantity": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "description": "Initial stock quantity of the product.",
            "format": "int32",
            "example": 50
          },
          "supplierId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "description": "Identifier of the supplier associated with the product.",
            "format": "int32",
            "example": 1
          }
        },
        "additionalProperties": false,
        "description": "Data transfer object used to create a new product."
      },
