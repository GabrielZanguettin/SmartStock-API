  "components": {
    "schemas": {
      "CreateOrderDto": {
        "required": [
          "items"
        ],
        "type": "object",
        "properties": {
          "customerName": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "description": "Name of the customer related to the order.",
            "nullable": true,
            "example": "Maria da Silva"
          },
          "discount": {
            "maximum": 1.7976931348623157E+308,
            "minimum": 0,
            "type": "number",
            "description": "Discount applied to the order.",
            "format": "double",
            "example": 10,00
          },
          "taxes": {
            "maximum": 1.7976931348623157E+308,
            "minimum": 0,
            "type": "number",
            "description": "Taxes applied to the order.",
            "format": "double",
            "example": 5,50
          },
          "items": {
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CreateOrderItemForOrderDto"
            },
            "description": "List of items that compose the order.",
            "example": [
              {
                "productId": 1,
                "quantity": 2
              }
            ]
          }
        },
        "additionalProperties": false,
        "description": "Data transfer object used to create a new order."
      },
      "CreateOrderItemDto": {
        "required": [
          "orderId",
          "productId",
          "quantity"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "description": "Identifier of the order associated with this item.",
            "format": "int32",
            "example": 1
          },
          "productId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "description": "Identifier of the product associated with this item.",
            "format": "int32",
            "example": 1
          },
          "quantity": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "description": "Quantity of the product included in this order item.",
            "format": "int32",
            "example": 50
          }
        },
        "additionalProperties": false,
        "description": "Data transfer object used to create a new order item."
      },
      "CreateOrderItemForOrderDto": {
        "type": "object",
        "properties": {
          "productId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "description": "Identifier of the product associated with the order item.",
            "format": "int32",
            "example": 1
          },
          "quantity": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "description": "Quantity of the product in the order.",
            "format": "int32",
            "example": 2
          }
        },
        "additionalProperties": false,
        "description": "Data transfer object used to create an item as part of a new order."
      },
      "CreatePaymentDto": {
        "required": [
          "method",
          "orderId"
        ],
        "type": "object",
        "properties": {
          "orderId": {
            "maximum": 2147483647,
            "minimum": 1,
            "type": "integer",
            "description": "Identifier of the order that will be paid.",
            "format": "int32",
            "example": 1
          },
          "method": {
            "$ref": "#/components/schemas/PaymentMethod"
          }
        },
        "additionalProperties": false,
        "description": "Data transfer object used to create a payment for an existing order."
      },
      "CreateProductDto": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string",
            "description": "Name of the product.",
            "example": "Tênis esportivo básico"
          },
          "unitPrice": {
            "maximum": 1.7976931348623157E+308,
            "minimum": 0.01,
            "type": "number",
            "description": "Unit price of the product.",
            "format": "double",
            "example": 199,90
          },
          "stockQuantity": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "description": "Initial stock quantity of the product.",
            "format": "int32",
            "example": 50
          },
          "supplierId": {
            "maximum": 2147483647,
